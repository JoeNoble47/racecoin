# Environment Variables for The Odds API
# Add this to your .env file (create it in your project root)

# The Odds API Configuration
ODDS_API_KEY=your_api_key_here
ODDS_API_SPORT=horse_racing_uk
ODDS_API_REGION=uk
ODDS_API_UPDATE_FREQUENCY=60

# Virtual Racing Fallback
USE_VIRTUAL_RACING=true
RACING_MODE=enhanced

# App Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
